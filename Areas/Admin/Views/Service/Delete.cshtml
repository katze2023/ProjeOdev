@model FitnessCenterManagement.Models.Service

@{
    ViewData["Title"] = "Hizmeti Sil";
}

<div class="container py-4">
    <div class="card border-danger shadow">
        <div class="card-header bg-danger text-white">
            <h2 class="h4 mb-0">Hizmeti Sil</h2>
        </div>
        <div class="card-body">
            <h4 class="text-danger mb-4">"@Model.Name" hizmetini silmek istediğinize emin misiniz?</h4>

            <div class="alert alert-light border">
                <div class="row">
                    <div class="col-sm-3 fw-bold">Açıklama:</div>
                    <div class="col-sm-9">@Model.Description</div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-sm-3 fw-bold">Süre:</div>
                    <div class="col-sm-9">@Model.DurationMinutes dk</div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-sm-3 fw-bold">Fiyat:</div>
                    <div class="col-sm-9">@Model.Price TL</div>
                </div>
            </div>

            <form asp-action="DeleteConfirmed" method="post" class="mt-4">
                <input type="hidden" asp-for="Id" />
                <button class="btn btn-danger px-4">Evet, Sil</button>
                <a class="btn btn-secondary" asp-action="Index">İptal</a>
            </form>
        </div>
    </div>
</div>