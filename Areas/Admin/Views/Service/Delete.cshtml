@model FitnessCenterManagement.Models.Service

@{
    ViewData["Title"] = "Hizmeti Sil";
}

<h2>Hizmeti Sil</h2>

<h4>@Model.Name adlı hizmeti silmek istediğinize emin misiniz?</h4>

<div class="mt-3 mb-3">
    <strong>Açıklama:</strong> @Model.Description <br />
    <strong>Süre:</strong> @Model.DurationMinutes dk <br />
    <strong>Fiyat:</strong> @Model.Price TL
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />

    <button class="btn btn-danger">Evet, Sil</button>
    <a class="btn btn-secondary" asp-action="Index">İptal</a>
</form>



