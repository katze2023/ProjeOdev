@model FitnessCenterManagement.Models.Service

@{
    ViewData["Title"] = "Hizmet Düzenle";
}

<h2>Hizmet Düzenle</h2>

<form asp-action="Edit" method="post">

    <input type="hidden" asp-for="Id" />

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label class="form-label">Ad</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Açıklama</label>
        <input asp-for="Description" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Süre (dk)</label>
        <input asp-for="Duration" type="number" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Fiyat</label>
        <input asp-for="Price" type="number" step="0.01" class="form-control" />
    </div>

    <button class="btn btn-primary">Güncelle</button>
    <a class="btn btn-secondary" asp-action="Index">Geri</a>

</form>
