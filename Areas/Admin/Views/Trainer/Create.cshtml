@model FitnessCenterManagement.Models.Trainer

<h2>Yeni Antrenör</h2>

<form asp-area="Admin"
      asp-controller="Trainer"
      asp-action="Create"
      method="post">

    <div class="mb-3">
        <label asp-for="FullName" class="form-label"></label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Expertise" class="form-label"></label>
        <input asp-for="Expertise" class="form-control" />
        <span asp-validation-for="Expertise" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="AvailableHours" class="form-label"></label>
        <input asp-for="AvailableHours" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="SalonId" class="form-label"></label>
        <select asp-for="SalonId"
                asp-items="ViewBag.SalonId"
                class="form-select">
            <option value="">-- Salon Seçiniz --</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success">Kaydet</button>

    <a class="btn btn-secondary"
       asp-area="Admin"
       asp-controller="Trainer"
       asp-action="Index">
        İptal
    </a>
</form>
