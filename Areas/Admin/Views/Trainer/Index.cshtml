@model IEnumerable<FitnessCenterManagement.Models.Trainer>

@{
    ViewData["Title"] = "Antrenör Yönetimi";
}

<div class="container py-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">
            <i class="bi bi-person-workspace me-2"></i> Antrenör Yönetimi
        </h2>

        <a class="btn btn-primary"
           asp-area="Admin"
           asp-controller="Trainer"
           asp-action="Create">
            <i class="bi bi-person-plus-fill me-1"></i> Yeni Antrenör Ekle
        </a>
    </div>

    <table class="table table-bordered table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th>Ad Soyad</th>
                <th>Uzmanlık</th>
                <th>Müsaitlik Saatleri</th>
                <th>Salon</th>
                <th class="text-center">İşlemler</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var t in Model)
            {
                <tr>
                    <td>@t.FullName</td>
                    <td>@t.Expertise</td>
                    <td>@t.AvailableHours</td>
                    <td>@t.Salon?.Ad</td>
                    <td class="text-center">
                        <div class="btn-group" role="group">
                            <a class="btn btn-outline-primary btn-sm"
                               asp-area="Admin"
                               asp-controller="Trainer"
                               asp-action="Edit"
                               asp-route-id="@t.Id">
                                Düzenle
                            </a>

                            <a class="btn btn-outline-danger btn-sm"
                               asp-area="Admin"
                               asp-controller="Trainer"
                               asp-action="Delete"
                               asp-route-id="@t.Id">
                                Sil
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
