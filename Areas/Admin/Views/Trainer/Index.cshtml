@model IEnumerable<FitnessCenterManagement.Models.Trainer>

<h2>Antrenör Yönetimi</h2>

<a class="btn btn-primary mb-3" asp-action="Create">Yeni Antrenör</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Ad Soyad</th>
            <th>Uzmanlık</th>
            <th>Müsaitlik</th>
            <th>Salon</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.FullName</td>
                <td>@t.Expertise</td>
                <td>@t.AvailableHours</td>
                <td>@t.Salon?.Ad</td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@t.Id">Düzenle</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@t.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
