@model IEnumerable<FitnessCenterManagement.Models.Salon>

<h2>Salon Yönetimi</h2>

<a class="btn btn-primary mb-3" asp-action="Create">Yeni Salon Ekle</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Salon Adı</th>
            <th>Adres</th>
            <th>Çalışma Saatleri</th>
            <th style="width:150px;">İşlemler</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var salon in Model)
        {
            <tr>
                <td>@salon.Ad</td>
                <td>@salon.Adres</td>
                <td>@salon.CalismaSaatleri</td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@salon.Id">Düzenle</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@salon.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
