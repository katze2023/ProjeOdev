@model FitnessCenterManagement.Models.Appointment

<h2>Randevu Sil</h2>

<p>Bu randevuyu silmek istediğinize emin misiniz?</p>

<ul>
    <li>Kullanıcı: @Model.User.Email</li>
    <li>Antrenör: @Model.Trainer.FullName</li>
    <li>Hizmet: @Model.Service.Name</li>
    <li>Tarih: @Model.Date.ToShortDateString()</li>
    <li>Saat: @Model.Time</li>
</ul>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button class="btn btn-danger">Sil</button>
    <a class="btn btn-secondary" asp-action="Index">İptal</a>
</form>

