@model IEnumerable<FitnessCenterManagement.Models.ExerciseRecommendation>

<h2>Yapay Zeka Egzersiz Önerileri</h2>

@if (!Model.Any())
{
    <div class="alert alert-warning">
        Size uygun egzersiz bulunamadı.
    </div>
}
else
{
    <div class="row">
        @foreach (var ex in Model)
        {
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <h5>@ex.ExerciseName</h5>
                        <p>@ex.Description</p>
                        <span class="badge bg-primary">
                            Süre: @ex.DurationMinutes dk
                        </span>
                    </div>
                </div>
            </div>
        }
    </div>
}
