@model FitnessCenterManagement.Models.ViewModels.AIUserInputViewModel

@{
    ViewData["Title"] = "AI Fitness Koçu";
}

@section Styles {
    <style>
        /* MacFit Tarzı Özel Stiller */
        :root {
            --macfit-yellow: #FFD200;
            --macfit-dark: #121212;
            --macfit-card-bg: #1e1e1e;
        }

        body {
            background-color: var(--macfit-dark);
            color: #fff;
        }

        .ai-title {
            font-family: 'Oswald', sans-serif;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .form-card {
            background-color: var(--macfit-card-bg);
            border: 1px solid #333;
            border-radius: 0; /* Keskin hatlar */
        }

        .form-control, .form-select {
            background-color: #2c2c2c;
            border: 1px solid #444;
            color: #fff;
            border-radius: 0;
            padding: 12px;
        }

            .form-control:focus, .form-select:focus {
                background-color: #333;
                border-color: var(--macfit-yellow);
                color: #fff;
                box-shadow: none;
            }

        .btn-macfit {
            background-color: var(--macfit-yellow);
            color: #000;
            font-family: 'Oswald', sans-serif;
            font-weight: 700;
            text-transform: uppercase;
            border: none;
            border-radius: 0;
            padding: 15px;
            font-size: 1.1rem;
            transition: all 0.3s;
        }

            .btn-macfit:hover {
                background-color: #e6bd00;
                transform: translateY(-2px);
            }

            .btn-macfit:disabled {
                background-color: #555;
                cursor: not-allowed;
            }

        /* Yükleme Animasyonu */
        .loading-spinner {
            display: none;
            width: 2rem;
            height: 2rem;
            border: 4px solid #f3f3f3;
            border-top: 4px solid var(--macfit-yellow);
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        @@keyframes spin {
            0% {
                transform: rotate(0deg);
            }

            100% {
                transform: rotate(360deg);
            }
        }

        /* Sonuç Kartları */
        .result-card {
            background-color: #222;
            border-left: 5px solid var(--macfit-yellow);
            margin-bottom: 20px;
        }

        .badge-macfit {
            background-color: var(--macfit-yellow);
            color: #000;
            font-weight: bold;
            border-radius: 0;
        }

        /* Görsel Önizleme */
        #imagePreview {
            width: 100%;
            height: 200px;
            object-fit: cover;
            border: 2px dashed #444;
            background-color: #222;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #666;
        }
    </style>
}

<div class="container py-5">

    <div class="row justify-content-center">
        <div class="col-lg-10">

            <div class="text-center mb-5">
                <h1 class="ai-title display-4 text-white">YAPAY ZEKA <span style="color: var(--macfit-yellow);">KOÇUN</span></h1>
                <p class="text-secondary lead">Vücut analizinize göre kişiselleştirilmiş 3 günlük antrenman ve beslenme programı.</p>
            </div>

            <div class="card form-card p-4 mb-5 shadow-lg">
                <div class="card-body">
                    <form id="aiForm" enctype="multipart/form-data">
                        <div class="row g-4">

                            <!-- Sol Kolon: Bilgiler -->
                            <div class="col-md-8">
                                <div class="row g-3">
                                    <div class="col-md-4">
                                        <label asp-for="HeightCm" class="form-label text-warning fw-bold">BOY (CM)</label>
                                        <input asp-for="HeightCm" type="number" class="form-control" placeholder="180" min="100" max="250" required>
                                        <span asp-validation-for="HeightCm" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-4">
                                        <label asp-for="WeightKg" class="form-label text-warning fw-bold">KİLO (KG)</label>
                                        <input asp-for="WeightKg" type="number" class="form-control" placeholder="75" min="30" max="300" required>
                                        <span asp-validation-for="WeightKg" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-4">
                                        <label asp-for="BodyType" class="form-label text-warning fw-bold">VÜCUT TİPİ</label>
                                        <select asp-for="BodyType" class="form-select" required>
                                            <option value="Mesomorph">Mesomorph (Atletik)</option>
                                            <option value="Ectomorph">Ectomorph (Zayıf)</option>
                                            <option value="Endomorph">Endomorph (Yapılı)</option>
                                        </select>
                                    </div>

                                    <div class="col-12 mt-4">
                                        <label class="form-label text-white fw-bold d-flex align-items-center gap-2">
                                            <i class="bi bi-camera-fill text-warning"></i> FOTOĞRAF YÜKLE (Opsiyonel)
                                        </label>
                                        <input type="file" asp-for="ImageFile" class="form-control" accept="image/*">
                                        <div class="form-text text-muted">Daha doğru analiz için boydan bir fotoğraf yükleyin.</div>
                                    </div>
                                </div>
                            </div>

                            <!-- Sağ Kolon: Önizleme -->
                            <div class="col-md-4">
                                <div id="previewContainer">
                                    <img id="imagePreview" src="#" alt="Görsel Önizleme" style="display:none;" />
                                    <div id="placeholderPreview" class="d-flex align-items-center justify-content-center text-center p-4" style="height: 200px; border: 2px dashed #444; background: #222; color: #666;">
                                        <span><i class="bi bi-image fs-1 d-block mb-2"></i>Görsel Seçilmedi</span>
                                    </div>
                                </div>
                            </div>

                            <!-- Buton -->
                            <div class="col-12 mt-4">
                                <button type="submit" id="generateBtn" class="btn btn-macfit w-100 d-flex align-items-center justify-content-center gap-3">
                                    <div class="loading-spinner" id="loadingSpinner"></div>
                                    <span id="btnText">ANALİZİ BAŞLAT VE PROGRAMI OLUŞTUR</span>
                                </button>
                            </div>

                        </div>
                    </form>
                </div>
            </div>

            <!-- SONUÇ ALANI -->
            <div id="resultSection" class="d-none animate__animated animate__fadeIn">
                <h3 class="ai-title mb-4 border-bottom border-secondary pb-2">SANA ÖZEL PROGRAM</h3>

                <div id="errorAlert" class="alert alert-danger d-none" role="alert"></div>

                <div id="recommendationsList" class="row g-4">
                    <!-- Javascript ile kartlar buraya eklenecek -->
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {

            // Görsel Önizleme
            $("#ImageFile").change(function() {
                const file = this.files[0];
                if (file) {
                    let reader = new FileReader();
                    reader.onload = function(event) {
                        $("#imagePreview").attr("src", event.target.result).show();
                        $("#placeholderPreview").hide();
                    }
                    reader.readAsDataURL(file);
                } else {
                    $("#imagePreview").hide();
                    $("#placeholderPreview").show();
                }
            });

            // Form Gönderimi (AJAX)
            $("#aiForm").submit(function(e) {
                e.preventDefault();

                // Validasyon
                if (!$(this).valid()) return;

                // UI Güncelleme
                const btn = $("#generateBtn");
                const originalText = $("#btnText").text();

                btn.prop("disabled", true);
                $("#btnText").text("YAPAY ZEKA ANALİZ EDİYOR...");
                $("#loadingSpinner").show();
                $("#resultSection").addClass("d-none");
                $("#recommendationsList").empty();
                $("#errorAlert").addClass("d-none");

                // FormData Oluşturma
                var formData = new FormData(this);

                $.ajax({
                    url: '@Url.Action("GetRecommendations", "AIExercise")',
                    type: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function(response) {
                        if (response.success && response.recommendations.length > 0) {
                            renderResults(response.recommendations);
                        } else {
                            showError("Uygun bir program oluşturulamadı. Lütfen tekrar deneyin.");
                        }
                    },
                    error: function(xhr, status, error) {
                        showError("Bir hata oluştu: " + error);
                    },
                    complete: function() {
                        btn.prop("disabled", false);
                        $("#btnText").text(originalText);
                        $("#loadingSpinner").hide();
                    }
                });
            });

            function renderResults(data) {
                const container = $("#recommendationsList");

                data.forEach((item, index) => {
                    // Bootstrap Grid: 3 kart varsa yan yana sığdır
                    let html = `
                        <div class="col-md-12">
                            <div class="card result-card text-white h-100 shadow">
                                <div class="card-header bg-black border-bottom border-dark py-3">
                                    <h5 class="card-title mb-0 ai-title text-warning">
                                        <i class="bi bi-calendar-check me-2"></i> ${item.title}
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div class="mb-3">
                                        <span class="badge badge-macfit me-2"><i class="bi bi-lightning-fill"></i> ${item.goal}</span>
                                        <span class="badge bg-secondary me-2"><i class="bi bi-clock"></i> ${item.durationMinutes} DK</span>
                                        <span class="badge bg-dark border border-secondary">${item.bodyType}</span>
                                    </div>

                                    <div class="card-text mt-3" style="white-space: pre-wrap; color: #ddd; line-height: 1.6;">
                                        ${item.description}
                                    </div>
                                </div>
                            </div>
                        </div>
                    `;
                    container.append(html);
                });

                $("#resultSection").removeClass("d-none");
                // Sayfayı sonuca kaydır
                $('html, body').animate({
                    scrollTop: $("#resultSection").offset().top - 100
                }, 500);
            }

            function showError(msg) {
                $("#errorAlert").text(msg).removeClass("d-none");
                $("#resultSection").removeClass("d-none");
            }
        });
    </script>
}