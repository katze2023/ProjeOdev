@model FitnessCenterManagement.Models.ViewModels.AIUserInputViewModel

<h2 class="mb-4">Yapay Zekâ Egzersiz Önerisi</h2>

<form asp-action="Index" method="post" class="card p-4 shadow-sm">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label asp-for="HeightCm" class="form-label"></label>
        <input asp-for="HeightCm" class="form-control" />
        <span asp-validation-for="HeightCm" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="WeightKg" class="form-label"></label>
        <input asp-for="WeightKg" class="form-control" />
        <span asp-validation-for="WeightKg" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="BodyType" class="form-label"></label>
        <select asp-for="BodyType" class="form-select">
            <option value="">-- Vücut Tipi Seçiniz --</option>
            <option value="Ectomorph">Ectomorph (Zayıf)</option>
            <option value="Mesomorph">Mesomorph (Atletik)</option>
            <option value="Endomorph">Endomorph (Kilo Almaya Yatkın)</option>
        </select>
        <span asp-validation-for="BodyType" class="text-danger"></span>
    </div>

    <button class="btn btn-primary w-100">
        Yapay Zekâdan Öneri Al
    </button>
</form>
