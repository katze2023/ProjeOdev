@using FitnessCenterManagement.Models
@model IEnumerable<FitnessCenterManagement.Models.ExerciseRecommendation>

@{
    ViewData["Title"] = "Kişisel Egzersiz Planınız";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f4f7f9;
        }
        /* Tavsiye kartları için dinamik sol kenarlık renkleri */
        .card-plan {
            transition: all 0.3s ease;
            border-left: 6px solid;
        }

            .card-plan:nth-child(3n+1) {
                border-left-color: #4f46e5; /* indigo */
            }

            .card-plan:nth-child(3n+2) {
                border-left-color: #10b981; /* emerald */
            }

            .card-plan:nth-child(3n) {
                border-left-color: #f59e0b; /* amber */
            }
    </style>
</head>
<body class="p-4 md:p-8">
    <div class="max-w-4xl mx-auto bg-white rounded-xl shadow-2xl p-6 md:p-10">

        <div class="flex items-center justify-between mb-8 border-b-4 border-indigo-600 pb-4">
            <h1 class="text-3xl font-extrabold text-gray-800">
                🏋️‍♂️ Kişisel Egzersiz Planınız
            </h1>
            <a href="@Url.Action("Index", "AIExercise")" class="bg-gray-600 hover:bg-gray-700 text-white font-semibold py-2 px-4 rounded-lg transition">
                ← Yeni Plan
            </a>
        </div>

        @if (Model == null || !Model.Any())
        {
            <div class="bg-yellow-50 border-l-4 border-yellow-400 p-6 rounded-lg">
                <div class="flex">
                    <div class="flex-shrink-0">
                        <svg class="h-6 w-6 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                        </svg>
                    </div>
                    <div class="ml-3">
                        <h3 class="text-lg font-semibold text-yellow-800">Uyarı</h3>
                        <p class="text-yellow-700 mt-2">Size uygun bir öneri bulunamadı. Lütfen bilgilerinizi kontrol ederek tekrar deneyin.</p>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="space-y-6">
                <div class="bg-blue-100 border-l-4 border-blue-500 p-4 rounded-lg mb-6 shadow-sm">
                    <p class="text-blue-800 font-semibold">Planınız @Model.Count() gün sürecektir. Başarılar dileriz!</p>
                </div>

                @foreach (var rec in Model.Select((r, i) => new { Rec = r, Index = i }))
                {
                    var day = rec.Index + 1;
                    var borderColor = day % 3 == 1 ? "border-indigo-600" : day % 3 == 2 ? "border-emerald-600" : "border-amber-600";
                    var bgColor = day % 3 == 1 ? "bg-indigo-50" : day % 3 == 2 ? "bg-emerald-50" : "bg-amber-50";

                    <div class="card-plan p-6 rounded-xl shadow-lg @bgColor border-4 @borderColor">
                        <h3 class="text-xl font-bold text-gray-800 mb-2 border-b pb-2">
                            Gün @day: @rec.Rec.Title
                        </h3>

                        <div class="flex flex-wrap gap-3 mb-4 text-sm">
                            <span class="px-3 py-1 bg-indigo-200 text-indigo-800 font-medium rounded-full">
                                🏋️ @rec.Rec.FocusArea
                            </span>
                            <span class="px-3 py-1 bg-green-200 text-green-800 font-medium rounded-full">
                                ⏱️ @rec.Rec.DurationMinutes dk
                            </span>
                            <span class="px-3 py-1 bg-gray-600 text-white font-medium rounded-full">
                                🧍 @rec.Rec.BodyType
                            </span>
                            <span class="px-3 py-1 bg-yellow-200 text-yellow-800 font-medium rounded-full">
                                🏆 @rec.Rec.Goal
                            </span>
                        </div>
                        <p class="text-gray-700 whitespace-pre-wrap leading-relaxed">@rec.Rec.Description</p>
                    </div>
                }
            </div>

            <!-- Önemli Notlar Bölümü -->
            <div class="mt-8 p-6 bg-blue-50 rounded-lg border-l-4 border-blue-500 shadow-md">
                <h3 class="text-lg font-bold text-blue-900 mb-2">💡 Önemli Notlar & Güvenlik</h3>
                <ul class="list-disc list-inside text-blue-800 space-y-1">
                    <li>Antrenman öncesi 10-15 dakika dinamik ısınma yapın.</li>
                    <li>Her set arasında 60-90 saniye, egzersizler arasında 2 dakika dinlenin.</li>
                    <li>Formunuza dikkat edin; ağırlığı artırmak ikinci planda kalmalıdır.</li>
                    <li>Bol su tüketin ve antrenman sonrası protein alımına özen gösterin.</li>
                    <li>Herhangi bir ağrı veya rahatsızlık hissederseniz egzersizi derhal durdurun.</li>
                </ul>
                <p class="mt-3 text-xs text-gray-600">
                    *Bu plan bir yapay zeka tarafından oluşturulmuştur ve profesyonel tıbbi veya fitness tavsiyesi yerine geçmez.
                </p>
            </div>

            <!-- Eylem Butonları -->
            <div class="mt-6 flex gap-4">
                <button onclick="window.print()" class="flex-1 bg-green-600 hover:bg-green-700 text-white font-semibold py-3 px-4 rounded-lg transition shadow-md">
                    🖨️ Yazdır
                </button>
                <button onclick="shareResults()" class="flex-1 bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-4 rounded-lg transition shadow-md">
                    📤 Paylaş
                </button>
            </div>
        }
    </div>

    <script>
        // Basit paylaşım fonksiyonu
        function shareResults() {
            if (navigator.share) {
                navigator.share({
                    title: 'Kişisel Egzersiz Planım',
                    text: 'Yapay zeka tarafından oluşturulan kişiselleştirilmiş egzersiz planımı inceleyin!',
                    url: window.location.href
                }).catch(err => console.log('Paylaşım iptal edildi'));
            } else {
                // Alternatif olarak uyarı göster
                alert('Tarayıcınız paylaşım özelliğini desteklemiyor. Lütfen URL\'yi kopyalayın: ' + window.location.href);
            }
        }
    </script>
</body>
</html>