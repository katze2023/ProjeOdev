@model IEnumerable<ExerciseRecommendation>

<h2 class="mb-4">Kişisel Egzersiz Planın</h2>

@if (!Model.Any())
{
    <div class="alert alert-warning">
        Size uygun bir öneri bulunamadı.
    </div>
}
else
{
    @foreach (var rec in Model)
    {
        <div class="card mb-3 shadow">
            <div class="card-body">
                <h5 class="card-title">@rec.Title</h5>
                <p class="card-text">@rec.Description</p>
            </div>
        </div>
    }
}
