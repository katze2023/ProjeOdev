@{
}

@model FitnessCenterManagement.Models.Service

<h2>Yeni Hizmet Ekle</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DurationMinutes"></label>
        <input asp-for="DurationMinutes" class="form-control" />
        <span asp-validation-for="DurationMinutes" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SalonId">Salon (opsiyonel)</label>
        <select asp-for="SalonId" class="form-control" asp-items="ViewBag.SalonId">
            <option value="">-- Seçiniz --</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success mt-2">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">İptal</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
