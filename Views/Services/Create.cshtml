@model FitnessCenterManagement.Models.Trainer

@{
    ViewData["Title"] = "Yeni Antrenör Ekle";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white p-3 text-center">
                    <h2 class="h5 mb-0"><i class="bi bi-person-plus me-2"></i>Yeni Antrenör Ekle</h2>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label fw-bold">Ad Soyad</label>
                            <input class="form-control" asp-for="FullName" placeholder="Antrenörün tam adını giriniz" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Expertise" class="form-label fw-bold">Uzmanlık Alanları</label>
                            <input class="form-control" asp-for="Expertise" placeholder="Örn: Fitness, Pilates, Boks" />
                            <span asp-validation-for="Expertise" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="AvailableHours" class="form-label fw-bold">Müsaitlik Saatleri</label>
                            <input class="form-control" asp-for="AvailableHours" placeholder="Örn: 09:00 - 18:00" />
                            <span asp-validation-for="AvailableHours" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="SalonId" class="form-label fw-bold">Bağlı Olduğu Salon</label>
                            <select asp-for="SalonId" class="form-select" asp-items="ViewBag.SalonId">
                                <option value="">-- Salon Seçiniz --</option>
                            </select>
                            <span asp-validation-for="SalonId" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ImageFile" class="form-label fw-bold">Antrenör Fotoğrafı</label>
                            <input type="file" class="form-control" asp-for="ImageFile" accept="image/*" />
                            <small class="text-muted">Profil için kare formatlı görseller önerilir.</small>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end pt-3">
                            <a class="btn btn-light border px-4" asp-action="Index">Vazgeç</a>
                            <button type="submit" class="btn btn-success px-5 fw-bold">Kaydet</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}