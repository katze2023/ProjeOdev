@model IEnumerable<FitnessCenterManagement.Models.Salon>

@{
    ViewData["Title"] = "Kulüplerimiz";
}

@section Styles {
    <style>
        :root {
            --macfit-yellow: #FFD200;
            --macfit-dark: #121212;
            --macfit-card-bg: #1e1e1e;
            --macfit-text-gray: #b0b0b0;
        }

        body {
            background-color: var(--macfit-dark);
            color: #fff;
        }

        .page-title {
            font-family: 'Oswald', sans-serif;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1px;
            font-size: 3rem;
        }

        .section-subtitle {
            color: var(--macfit-text-gray);
            font-size: 1.2rem;
            max-width: 600px;
            margin: 0 auto;
        }

        /* Salon Kartı Tasarımı */
        .salon-card {
            background-color: var(--macfit-card-bg);
            border: 1px solid #333;
            transition: all 0.3s ease;
            height: 100%;
            position: relative;
            overflow: hidden;
        }

            .salon-card:hover {
                border-color: var(--macfit-yellow);
                transform: translateY(-5px);
                box-shadow: 0 10px 20px rgba(0,0,0,0.5);
            }

        .salon-image-placeholder {
            height: 200px;
            background: linear-gradient(45deg, #222, #333);
            display: flex;
            align-items: center;
            justify-content: center;
            color: #555;
            font-size: 3rem;
            border-bottom: 1px solid #333;
        }

        .card-body {
            padding: 1.5rem;
        }

        .salon-title {
            font-family: 'Oswald', sans-serif;
            font-size: 1.5rem;
            margin-bottom: 0.5rem;
            color: #fff;
        }

        .salon-info {
            color: var(--macfit-text-gray);
            font-size: 0.9rem;
            margin-bottom: 0.5rem;
            display: flex;
            align-items: flex-start;
            gap: 10px;
        }

            .salon-info i {
                color: var(--macfit-yellow);
                margin-top: 3px;
            }

        .btn-detail {
            background-color: transparent;
            border: 2px solid #fff;
            color: #fff;
            font-family: 'Oswald', sans-serif;
            text-transform: uppercase;
            font-weight: bold;
            width: 100%;
            padding: 10px;
            transition: all 0.3s;
            border-radius: 0;
        }

            .btn-detail:hover {
                background-color: #fff;
                color: #000;
            }

        /* Sarı çizgi dekorasyonu */
        .decor-line {
            width: 60px;
            height: 4px;
            background-color: var(--macfit-yellow);
            margin: 20px auto;
        }
    </style>
}

<div class="container py-5">

    <!-- Header -->
    <div class="text-center mb-5 animate__animated animate__fadeInDown">
        <h1 class="page-title">KULÜPLERİMİZ</h1>
        <div class="decor-line"></div>
        <p class="section-subtitle">
            Sana en yakın kulübü bul, sınırlarını zorlamaya hemen başla.
            Geniş antrenman alanları ve profesyonel ekipmanlar seni bekliyor.
        </p>
    </div>

    <!-- Salonlar Grid -->
    <div class="row g-4">
        @foreach (var salon in Model)
        {
            <div class="col-md-4 col-sm-6 animate__animated animate__fadeInUp">
                <div class="card salon-card">
                    <!-- Görsel Alanı (Dinamik resim yoksa ikon gösterir) -->
                    <div class="salon-image-placeholder">
                        <i class="bi bi-building"></i>
                    </div>

                    <div class="card-body d-flex flex-column">
                        <h5 class="salon-title">@salon.Ad</h5>

                        <div class="salon-info mt-3">
                            <i class="bi bi-geo-alt-fill"></i>
                            <span>@salon.Adres</span>
                        </div>

                        <div class="salon-info">
                            <i class="bi bi-clock-fill"></i>
                            <span>@salon.CalismaSaatleri</span>
                        </div>

                        <div class="mt-auto pt-4">
                            <a asp-action="Details" asp-route-id="@salon.Id" class="btn btn-detail">
                                KULÜBÜ İNCELE <i class="bi bi-arrow-right ms-2"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>