@{
}

@model IEnumerable<FitnessCenterManagement.Models.Trainer>

<h2>Antrenörler</h2>

<a class="btn btn-primary mb-3" asp-action="Create">Yeni Antrenör Ekle</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Ad Soyad</th>
            <th>Uzmanlık</th>
            <th>Müsaitlik</th>
            <th>Salon</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var trainer in Model)
        {
            <tr>
                <td>@trainer.FullName</td>
                <td>@trainer.Expertise</td>
                <td>@trainer.AvailableHours</td>
                <td>@trainer.Salon?.Ad</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@trainer.Id">Detay</a>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@trainer.Id">Düzenle</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@trainer.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
