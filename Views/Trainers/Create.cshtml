@{
}

@model FitnessCenterManagement.Models.Trainer

<h2>Yeni Antrenör Ekle</h2>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Expertise"></label>
        <input asp-for="Expertise" class="form-control" />
        <span asp-validation-for="Expertise" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AvailableHours"></label>
        <input asp-for="AvailableHours" class="form-control" />
        <span asp-validation-for="AvailableHours" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SalonId"></label>
        <select asp-for="SalonId" class="form-control" asp-items="ViewBag.SalonId">
            <option value="">Salon Seçiniz (Opsiyonel)</option>
        </select>
    </div>

    <button class="btn btn-success mt-3">Kaydet</button>
    <a class="btn btn-secondary mt-3" asp-action="Index">İptal</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
