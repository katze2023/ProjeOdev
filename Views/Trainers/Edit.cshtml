@model FitnessCenterManagement.Models.Trainer

<h2>Antrenörü Düzenle</h2>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    @* --- EN ÖNEMLİ KISIM: ID HİDDEN FIELD --- *@
    @* Hangi kaydın güncelleneceğini belirtmek için Id'yi gizli olarak tutmalıyız *@
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Expertise"></label>
        <input asp-for="Expertise" class="form-control" />
        <span asp-validation-for="Expertise" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AvailableHours"></label>
        <input asp-for="AvailableHours" class="form-control" />
        <span asp-validation-for="AvailableHours" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SalonId"></label>
        @* Seçili olan salon otomatik olarak gelecektir *@
        <select asp-for="SalonId" class="form-control" asp-items="ViewBag.SalonId">
            <option value="">Salon Seçiniz (Opsiyonel)</option>
        </select>
        <span asp-validation-for="SalonId" class="text-danger"></span>
    </div>

    @* Buton rengini Create'den ayırmak için 'btn-primary' (Mavi) yapabiliriz *@
    <button type="submit" class="btn btn-primary mt-3">Güncelle</button>
    <a class="btn btn-secondary mt-3" asp-action="Index">İptal</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}