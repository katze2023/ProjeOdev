@{
}

@model IEnumerable<FitnessCenterManagement.Models.Salon>

<h2>Salonlar</h2>

<a class="btn btn-primary" href="/Salon/Create">Yeni Salon Ekle</a>

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Adres</th>
            <th>Çalışma Saatleri</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var salon in Model)
        {
            <tr>
                <td>@salon.Ad</td>
                <td>@salon.Adres</td>
                <td>@salon.CalismaSaatleri</td>
                <td>
                    <a class="btn btn-warning btn-sm" href="/Salon/Edit/@salon.Id">Düzenle</a>
                    <a class="btn btn-danger btn-sm" href="/Salon/Delete/@salon.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
