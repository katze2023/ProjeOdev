@{
}

@model IEnumerable<FitnessCenterManagement.Models.Salon>

<h2 class="mb-4">Spor Salonlarımız</h2>

@if (User.IsInRole("Admin"))
{
    <a class="btn btn-primary mb-3" asp-action="Create">Yeni Salon Ekle</a>
}

<div class="row">
    @foreach (var salon in Model)
    {
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card shadow h-100">

                <img src="@salon.ImagePath"
                     class="card-img-top"
                     style="height:220px; object-fit:cover;"
                     alt="@salon.Ad" />

                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@salon.Ad</h5>

                    <p class="card-text">
                        <strong>Adres:</strong><br />
                        @salon.Adres
                    </p>

                    <p class="card-text">
                        <strong>Çalışma Saatleri:</strong><br />
                        @salon.CalismaSaatleri
                    </p>

                    @if (User.IsInRole("Admin"))
                    {
                        <div class="mt-auto">
                            <a class="btn btn-warning btn-sm"
                               asp-action="Edit"
                               asp-route-id="@salon.Id">Düzenle</a>

                            <a class="btn btn-danger btn-sm"
                               asp-action="Delete"
                               asp-route-id="@salon.Id">Sil</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>
