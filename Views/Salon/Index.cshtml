@model IEnumerable<FitnessCenterManagement.Models.Salon>

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="h4 mb-0 text-dark">
            <i class="bi bi-building me-2 text-primary"></i> Spor Salonlarımız
        </h2>
        @if (User.IsInRole("Admin"))
        {
            <a class="btn btn-primary shadow-sm" asp-action="Create">
                <i class="bi bi-plus-circle me-1"></i> Yeni Salon Ekle
            </a>
        }
    </div>

    <div class="row g-4">
        @foreach (var salon in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card shadow-sm h-100 border-0 transition-hover">
                    <!-- Salon Görseli -->
                    <div class="position-relative">
                        <img src="@(string.IsNullOrEmpty(salon.ImagePath) ? "/images/salons/default-salon.jpg" : salon.ImagePath)"
                             class="card-img-top"
                             style="height:220px; object-fit:cover;"
                             alt="@salon.Ad"
                             onerror="this.src='/images/salons/default-salon.jpg';" />

                        <div class="card-img-overlay d-flex align-items-start justify-content-end p-2">
                            <span class="badge bg-dark bg-opacity-75 shadow-sm">
                                <i class="bi bi-clock me-1"></i> @salon.CalismaSaatleri
                            </span>
                        </div>
                    </div>

                    <div class="card-body d-flex flex-column">
                        <div class="mb-3">
                            <h5 class="card-title fw-bold mb-1">@salon.Ad</h5>
                            <small class="text-muted">
                                <i class="bi bi-geo-alt-fill text-danger me-1"></i> @salon.Adres
                            </small>
                        </div>

                        <div class="mt-auto pt-3 border-top">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a class="btn btn-outline-info btn-sm" asp-action="Details" asp-route-id="@salon.Id">
                                        <i class="bi bi-eye"></i> Detay
                                    </a>
                                </div>

                                @if (User.IsInRole("Admin"))
                                {
                                    <div class="btn-group">
                                        <a class="btn btn-warning btn-sm"
                                           asp-action="Edit"
                                           asp-route-id="@salon.Id">
                                            <i class="bi bi-pencil-square"></i> Düzenle
                                        </a>
                                        <a class="btn btn-danger btn-sm"
                                           asp-action="Delete"
                                           asp-route-id="@salon.Id">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .transition-hover {
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }

        .transition-hover:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
        }
</style>