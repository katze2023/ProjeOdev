@model FitnessCenterManagement.Models.Salon

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white p-3">
                    <h2 class="h5 mb-0"><i class="bi bi-plus-circle me-2"></i>Yeni Salon Ekle</h2>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Salon Adı</label>
                            <input class="form-control" asp-for="Ad" placeholder="Salon ismini giriniz" />
                            <span asp-validation-for="Ad" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Adres</label>
                            <textarea class="form-control" asp-for="Adres" rows="2" placeholder="Tam adresi giriniz"></textarea>
                            <span asp-validation-for="Adres" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Çalışma Saatleri</label>
                            <input class="form-control" asp-for="CalismaSaatleri" placeholder="Örn: 08:00 - 22:00" />
                            <span asp-validation-for="CalismaSaatleri" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">Salon Görseli</label>
                            <input type="file" class="form-control" asp-for="ImageFile" accept="image/*" />
                            <small class="text-muted">Lütfen yüksek çözünürlüklü bir fotoğraf seçiniz.</small>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a class="btn btn-light border px-4" asp-action="Index">İptal</a>
                            <button type="submit" class="btn btn-success px-5">Kaydet</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>