<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FitnessCenterManagement</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FitnessCenterManagement.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    @RenderSection("Styles", required: false)
</head>

<body>
    <header>

        <nav class="navbar navbar-expand-lg navbar-dark bg-dark border-bottom shadow">
        </nav>

        <nav class="navbar navbar-expand-lg navbar-dark bg-dark border-bottom shadow fixed-top">
            <div class="container-fluid container-xl">

                <a class="navbar-brand fw-bold text-white" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-fire me-2"></i> FitnessCenterManagement
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse" id="mainNavbar">

                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Home" asp-action="Index"><i class="bi bi-house-fill me-1"></i> Home</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Services" asp-action="Index"><i class="bi bi-list-check me-1"></i> Hizmetler</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="PublicSalon" asp-action="Index">
                                <i class="bi bi-building me-1"></i> Salonlar
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-warning fw-bold" asp-controller="AIExercise" asp-action="Index"><i class="bi bi-robot me-1"></i> AI Egzersiz Önerileri</a>
                        </li>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-info" asp-controller="Appointment" asp-action="Create"><i class="bi bi-plus-circle-fill me-1"></i> Randevu Al</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Appointment" asp-action="MyAppointments"><i class="bi bi-calendar-check-fill me-1"></i> Randevularım</a>
                            </li>
                        }

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-danger fw-bold" href="#" id="adminDropdown"
                                   role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-gear-fill me-1"></i> Admin Paneli
                                </a>

                                <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="adminDropdown">
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="Home" asp-action="Index">Admin Ana Sayfa</a></li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="Trainer" asp-action="Index">Antrenör Yönetimi</a></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="Service" asp-action="Index">Hizmet Yönetimi</a></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="Salon" asp-action="Index">Salon Yönetimi</a></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="Appointment" asp-action="Index">Randevu Yönetimi</a></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="User" asp-action="Index">Kullanıcı Yönetimi</a></li>
                                </ul>
                            </li>
                        }

                        <li class="nav-item">
                            <a class="nav-link text-muted" asp-controller="Home" asp-action="Privacy"><i class="bi bi-shield-lock-fill me-1"></i> Privacy</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item d-flex align-items-center me-2">
                                <span class="navbar-text text-white">
                                    Hello, <span class="fw-bold text-white">@User.Identity.Name!</span>
                                </span>
                            </li>
                            <li class="nav-item">
                                <form method="post" id="logoutForm" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                    <button id="logout" type="submit" class="nav-link btn btn-link text-white text-decoration-none">
                                        Çıkış
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <partial name="_LoginPartial" />
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-xl" style="min-height: 80vh;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-dark">
        <div class="container-xl text-center py-3">
            &copy; 2025 - FitnessCenterManagement -
            <a asp-controller="Home" asp-action="Privacy" class="text-white text-decoration-none">Gizlilik Politikası</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>                                                                                                                                                          