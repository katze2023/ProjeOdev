@model FitnessCenterManagement.Models.Salon

<h2>Yeni Salon Ekle</h2>

<form method="post" asp-action="Create">

    <div class="mb-3">
        <label class="form-label">Salon Adı</label>
        <input asp-for="Ad" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Adres</label>
        <input asp-for="Adres" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Çalışma Saatleri</label>
        <input asp-for="CalismaSaatleri" class="form-control" />
    </div>

    <button class="btn btn-success">Kaydet</button>
    <a class="btn btn-secondary" asp-action="Index">Geri</a>
</form>
