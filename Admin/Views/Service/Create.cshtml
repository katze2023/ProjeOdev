@model FitnessCenterManagement.Models.Service

@{
    ViewData["Title"] = "Yeni Hizmet Ekle";
}

<h2>Yeni Hizmet Ekle</h2>

<form asp-action="Create" method="post">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label class="form-label">Ad</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Açıklama</label>
        <input asp-for="Description" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Süre (dk)</label>
        <input asp-for="Duration" type="number" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Fiyat</label>
        <input asp-for="Price" type="number" step="0.01" class="form-control" />
    </div>

    <button class="btn btn-success">Kaydet</button>
    <a class="btn btn-secondary" asp-action="Index">Geri</a>

</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

